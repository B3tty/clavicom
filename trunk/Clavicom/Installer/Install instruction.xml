<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    Fichier d'installation du Clavicom NG.
    Pour générer l'installeur associé, appelez le script "Generate installer.bat"
-->

<installation version="1.0">

    <!-- Informations sur l'application -->
    <info>
        <appname>Clavicom NG</appname>
        <appversion>Bêta 3.0</appversion>
		<appsubpath>Handicap International\Clavicom NG</appsubpath>
        <authors>
            <author name="Thomas Devaux" email="thomas.devaux@gmail.com"/>
            <author name="Guillaume Rebesche" email="guillaume.rebesche@gmail.com"/>
        </authors>
        <url>http://www.handicap-icom.asso.fr/</url>
		<javaversion>1.6</javaversion>
    </info>
    
    <!-- Préférences graphiques de l'installeur -->
     <guiprefs height="600" resizable="no" width="800">
        <laf name="looks">
            <os family="unix"/>
        </laf>
        <!-- GUI addaption for more informations see "Modifying the GUI" in the documentation -->
    	<modifier key="layoutAnchor" value="CENTER"/>
    	<modifier key="headingPanelCounter" value="progressbar"/>
		<modifier key="headingPanelCounterPos" value="inNavigationPanel"/>
		<modifier key="allYGap" value="3"/>
		<modifier key="paragraphYGap" value="10"/>
		<modifier key="filler1YGap" value="5"/>
		<modifier key="filler3XGap" value="10"/>
    </guiprefs>
    
    <!-- Langages de l'installeur proposés -->
    <locale>
	    <langpack iso3="fra"/>
        <langpack iso3="eng"/>
		<langpack iso3="deu"/>
		<langpack iso3="ita"/>
		<langpack iso3="jpn"/>
		<langpack iso3="spa"/>
    </locale>
	
	<!-- Variables -->
    <variables>
        <variable name="DesktopShortcutCheckboxEnabled" value="true"/>
    </variables>
    
    <!-- Ressources nécessaires à certains panels. Ici pour le panel de license et d'info -->
    <resources>
        <res src="Installer_Files\Readme.html" id="HTMLInfoPanel.info"/>
        <res src="Installer_Files\Licence.txt" id="LicencePanel.licence"/>
        <res src="Installer_Files\splash-3.10.png" id="installer.langsel.img"/>
        <res src="Installer_Files\shortcutSpec.xml" id="shortcutSpec.xml"/>
        <res src="Installer_Files\core.png" id="ImgPacksPanel.img.0"/>
        <res src="Installer_Files\doc-html.png" id="ImgPacksPanel.img.1"/>
        <res src="Installer_Files\javadocs.png" id="ImgPacksPanel.img.2"/>
        <res src="Installer_Files\doc-nanoxml.png" id="ImgPacksPanel.img.3"/>
        <res src="Installer_Files\sample.png" id="ImgPacksPanel.img.4"/>
        <res src="Installer_Files\src.png" id="ImgPacksPanel.img.5"/>
        <res src="Installer_Files\border1.png" id="Installer.image.0"/>
        <res src="Installer_Files\border2.png" id="Installer.image.1"/>
        <res src="Installer_Files\border3.png" id="Installer.image.2"/>
        <res src="Installer_Files\border4.png" id="Installer.image.3"/>
        <res src="Installer_Files\border5.png" id="Installer.image.4"/>
        <res src="Installer_Files\border5.png" id="Installer.image.5"/>
        <res src="Installer_Files\border6.png" id="Installer.image.6"/>
        <res src="Installer_Files\border7.png" id="Installer.image.7"/>
        <res src="Installer_Files\border8.png" id="Installer.image.8"/>
    </resources>
    
    <!-- Panels de l'installateur à utiliser (l'ordre est respecté) -->
    <panels>
        <panel classname="HTMLInfoPanel" id="infopanel"/>
        <panel classname="LicencePanel" id="licensepanel"/>
        <panel classname="TargetPanel" id="targetpanel"/>
        <panel classname="ImgPacksPanel" id="packspanel"/>
        <panel classname="SummaryPanel" id="summarypanel"/>
        <panel classname="InstallPanel" id="installpanel"/>
        <panel classname="ShortcutPanel" id="shortcutpanel"/>
        <panel classname="FinishPanel" id="finishpanel"/>
    </panels>
	
	<!-- The listeners section for CustomActions -->
    <listeners>
        <listener installer="SummaryLoggerInstallerListener"/>
        <listener installer="RegistryInstallerListener"
                  uninstaller="RegistryUninstallerListener">
            <os family="windows"/>
        </listener>
    </listeners>
    
    <!-- Liste des packs utilisé (groupes de fichiers à installer ou non) -->
    <packs>
		<pack name="Application" required="yes" preselected="yes">
            <description>Liste des fichiers nécessaires à l'execution de l'application.</description>
            <file src="class" targetdir="$INSTALL_PATH"/>
            <file src="libs" targetdir="$INSTALL_PATH"/>
			<file src="Ressources" targetdir="$INSTALL_PATH"/>
			<file src="winHook.dll" targetdir="$INSTALL_PATH"/>
			<file src="ClavicomNG.exe" targetdir="$INSTALL_PATH"/>
        </pack>
        <pack name="Sources" required="no" preselected="no">
            <description>Cochez cette option pour installer les fichiers sources de l'application.
Cette option est utile si vous souhaitez participer à l'amélioration de Clavicom NG.</description>
            <file src="src" targetdir="$INSTALL_PATH"/>
        </pack>
        <pack name="Documentation du logiciel" required="no" preselected="yes">
            <description>Cochez cette option pour installer la documentation utilisateur de Clavicom NG.</description>
            <file src="Doc" targetdir="$INSTALL_PATH"/>
        </pack>
        <pack name="Demarrage au lancement de l'ordinateur" required="no" preselected="yes">
            <description>Cochez cette option pour ajouter un raccourci qui lancera l'application au demarrage de l'ordinateur.</description>
            <file src="Doc" targetdir="$INSTALL_PATH"/>
        </pack>
    </packs>
	
	<!-- Spécification des raccourcis -->
	<native type="izpack" name="ShellLink.dll"/>
    <native type="3rdparty" name="COIOSHelper.dll" stage="both">
    <os family="windows"/></native>    
</installation>